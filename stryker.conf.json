{
	"$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
	"packageManager": "yarn",
	"timeoutMS": 10000,
	"commandRunner": {
		"command": "IS_TESTING=true jest --runInBand --passWithNoTests"
	},
	"cleanTempDir": true,
	"logLevel": "off",
	"fileLogLevel": "off",
	"clearTextReporter": {
		"logTests": true
	},
	"ignorePatterns": [
		"*/**/config/*",
		"*/**/shared/*",
		"*/**/main.ts"
	],
	"reporters": [
	  "html",
	  "clear-text",
	  "progress"
	],
	"testRunner": "jest",
	"coverageAnalysis":"perTest",
	"jest": {
	  "config": {
		"rootDir": "src",
		"testEnvironment": "node",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
		  "^.+\\.(t|j)s$": "ts-jest"
		},
		"moduleNameMapper": {
		  "@modules/(.*)": "<rootDir>/modules/$1",
		  "@config/(.*)": "<rootDir>/config/$1",
		  "@shared/(.*)": "<rootDir>/shared/$1"
		}
	  },
	  "enableFindRelatedTests": true
	},
	"concurrency": 4
}
