{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "src",
  "testRegex": ".*\\.test\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "**/*.(t|j)s"
  ],
  "coverageDirectory": "../coverage",
  "testEnvironment": "node",
	"moduleNameMapper": {
		"@modules/(.*)": "<rootDir>/modules/$1",
		"@config/(.*)": "<rootDir>/config/$1",
		"@shared/(.*)": "<rootDir>/shared/$1"
	}
}
